<% include ../partials/header.ejs %> 

<!--Content for the add page-->

<div class="container">
    <div class="row">
        <div class="col-md-offset-5 col-md-6">
            <h1><%=title %></h1>

            <form action="" class="form" method="POST">
                <div class="form-group">
                    <label for="NameTextField">Name</label>
                    <input type="text" class="form-control" 
                    id="NameTextField" placeHolder="Enter Name" name="name" required>
                </div>

                <div class="form-group">
                    <label for="DescTextField">Description</label>
                    <input type="text" class="form-control" 
                    id="DescTextField" placeHolder="Enter Description" name="desc" required>
                </div>
                <button type="submit" class="btn btn-primary">
                        <i class="fa fa-edit"></i>Submit</button>
            </form>

        </div>
    </div>
</div>



